{
  "version": 1,
  "naming": {
    "pattern": "{name}.{ext}",
    "normalize": {
      "lowercase": true,
      "replaceSpacesWith": "-",
      "removeAccents": true,
      "collapseDashes": true
    }
  },
  "defaults": {
    "output": {
      "singleFile": true,
      "recommendedFormat": "webp",
      "allowFormatOverrides": true,
      "removeMetadata": true
    },
    "quality": {
      "photo": {
        "webp": 78,
        "avif": 55,
        "jpg": 82
      },
      "ui": {
        "webp": 85,
        "png8": true
      }
    },
    "resize": {
      "noUpscale": true,
      "density": {
        "mode": "standard",
        "scaleFactor": 1.33
      }
    },
    "crop": {
      "autoOnOrientationChange": true,
      "mode": "cover",
      "lockedAspect": true
    }
  },
